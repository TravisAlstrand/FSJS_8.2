extends layout

block content
  h1 Books
  .header-div 
    p
      a(class='button', href='/books/new') Create New Book
    if(search)
      p 
        a(class='button', href='/books') Clear Search
    form(action='/books/search' class='search-form') 
      input(id='search', type='search', name='query', placeholder='Search...')
      input(class='button search-btn', type='submit', value='Search')
  table 
    thead 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year
    tbody 
      each book in books 
        tr 
          td
            a(href=`/books/${book.id}`) #{book.title}
          td= book.author 
          td= book.genre 
          td= book.year        